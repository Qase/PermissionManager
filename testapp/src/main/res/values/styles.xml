<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="TextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/textSizeMedium</item>
        <item name="android:textColor">@color/colorPrimaryOpaque</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearanceLarge" parent="TextAppearance">
        <item name="android:textSize">@dimen/textSizeLarge</item>
    </style>

    <style name="TextAppearanceExtraExtraLarge" parent="TextAppearanceLarge">
        <item name="android:textSize">@dimen/textSizeExtraExtraLarge</item>
    </style>

    <style name="TextAppearanceSecondaryLarge" parent="TextAppearanceLarge">
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <style name="TextAppearanceWhite" parent="TextAppearance">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

</resources>
